export PATH=$PATH:/home/victor/.local/bin

export EDITOR=/bin/nvim

export _JAVA_AWT_WM_NONREPARENTING=1 # 'tis for IntelliJ to actually function

export BC_ENV_ARGS=/home/victor/.config/bc/bc.env	# Sets env vars for bc calculator

# fzf default settings
export FZF_DEFAULT_OPTS="--layout=reverse --height 50% --no-bold --color='bg+:#ec9a0a,fg+:#060604,gutter:0,hl+:1,prompt:#fcae1e'"

# home directories and caches and stuff to keep home tidy
export GNUPGHOME="~/.config/gnupg"
export WWW_HOME="~/.config/w3m"
export __GL_SHADER_DISK_CACHE_PATH="~/.cache/nv"
export VIMINIT=":set runtimepath^=/home/victor/.config/vim|:source /home/victor/.config/vim/vimrc"
