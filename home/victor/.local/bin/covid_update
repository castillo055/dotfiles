#!/bin/bash

OFFICIAL=$( wget -O- -q https://covid19.isciii.es/resources/data.csv | awk -F "," 'NR==2{ print $3 }' )

LATEST=$( curl https://corona-stats.online?source=2 -s | grep Spain | awk -F "â”‚" '{ print $3$4 }' | sed -r "s/\x1B\[([0-9]{1,3}(;[0-9]{1,2})?)?[mGK]//g;s/  *//;s/  */(/;s/ $/)/" )

export DISPLAY=:0
notify-send "\uf0fa $LATEST"
echo -e "\uf0fa $LATEST" # [off $OFFICIAL]" 
